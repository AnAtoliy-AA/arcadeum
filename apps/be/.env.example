
# Backend Environment Example (.env)
# Copy to `.env` and fill in the values you need for your deployment.

# --- Core Application ---
# Node environment: development | production
NODE_ENV=development
# Port to listen on (default: 4000)
PORT=4000

# --- Database ---
# MongoDB connection string
MONGODB_URI=

# --- Sentry (optional) ---
# Sentry DSN for error reporting (optional)
SENTRY_DSN=

# --- OAuth (Google) ---
# Google OAuth issuer (usually do not change)
OAUTH_ISSUER=https://accounts.google.com
# Main Google OAuth web client ID
OAUTH_WEB_CLIENT_ID=
# Main Google OAuth web client secret
OAUTH_WEB_CLIENT_SECRET=
# Comma-separated list of allowed redirect URIs for web clients
OAUTH_WEB_REDIRECT_URI=http://localhost:3000/auth/callback,http://localhost:8081/auth/callback
# Comma-separated list of allowed web origins
OAUTH_WEB_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8081

# (Optional) If you use separate Google OAuth clients for Next.js or Expo web, fill these:
# Next.js web client
OAUTH_WEB_CLIENT_ID_NEXT=
OAUTH_WEB_CLIENT_SECRET_NEXT=
OAUTH_WEB_REDIRECT_URI_NEXT=
OAUTH_WEB_ALLOWED_ORIGINS_NEXT=
# Expo web client
OAUTH_WEB_CLIENT_ID_EXPO=
OAUTH_WEB_CLIENT_SECRET_EXPO=
OAUTH_WEB_REDIRECT_URI_EXPO=
OAUTH_WEB_ALLOWED_ORIGINS_EXPO=

# --- Auth (JWT) ---
# Secret for signing JWT tokens (required)
AUTH_JWT_SECRET=replace_with_strong_secret

# --- Payments (PayPal, optional) ---
# PayPal API credentials (sandbox or production)
PAYPAL_CLIENT_ID=
PAYPAL_CLIENT_SECRET=
# Sandbox: https://api-m.sandbox.paypal.com, Production: https://api-m.paypal.com
PAYPAL_API_BASE_URL=https://api-m.sandbox.paypal.com
# Brand name to show on PayPal checkout page
PAYPAL_BRAND_NAME=AicoApp
# URLs for redirection after payment
PAYPAL_RETURN_URL=http://localhost:3000/payment/success
PAYPAL_CANCEL_URL=http://localhost:3000/payment/cancel

# --- Socket Encryption ---
# Enable encryption for socket messages (set to true for production)
SOCKET_ENCRYPTION_ENABLED=false
# 32-byte hex-encoded key for AES-256-GCM (generate with: openssl rand -hex 32)
# This key is stored ONLY on the server and sent to authenticated clients on connect
# It is NOT bundled in client applications
SOCKET_ENCRYPTION_KEY=
